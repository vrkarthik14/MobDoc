<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <AutoCompleteTextView
            android:id="@+id/Select_symptoms"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:hint="Enter Symptoms" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:text="Add Symptoms" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Gender:"
            android:textColor="@android:color/background_dark" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:text="Year Of Birth:"
            android:textColor="@android:color/background_dark" />

        <Spinner
            android:id="@+id/year_of_birth"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dialog" />
    </LinearLayout>


    <TextView
        android:id="@+id/seltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Selected Symptoms:"
        android:textColor="@android:color/holo_red_dark" />


    <ListView
        android:id="@+id/display_symptom"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        android:background="@drawable/bordershape" />

    <LinearLayout
        android:id="@+id/progressDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/proptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proposed Symptoms"
        android:layout_marginLeft="18dp"
        android:textColor="@android:color/holo_red_dark" />


    <ListView
        android:id="@+id/proposedSym"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bordershape" />


    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/clearInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_custom"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Clear input" />

        <Button
            android:id="@+id/get_dignosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_custom"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="analyze disease pattern" />


    </LinearLayout>


</LinearLayout>

